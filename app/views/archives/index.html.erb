<% content_for(:page_title) do %><%= archives_title %><% end -%>

<article>
	<header>
    <h1>Archives</h1>
	</header>
<div id="article-wrap">


 
<% if @months.empty? -%>
	<p>Once posts are added they will start to appear in this archive.</p>
<% else -%>

	<% @months.each do |month| -%>
	<h2><%= format_month(month.date) %></h2>
	<ul class='article_list'>
	  <% month.posts.each do |post| -%>
	    <li><%= link_to(post.title, post_path(post)) %><% unless post.tags.empty? %> <div class='categories'>(<%= linked_tag_list(post.tags) %>)</div><% end -%></li>
	  <% end -%>
	</ul>
	<% end -%>

<% end -%>
</div><!-- article-wrap -->
</article>
